<div class="contents row">
  <h1><%= @nickname %>さんの投稿一覧</h1>
  <% @items.each do |item| %>
    <div class="content_post" style="background-image: url(<%= item.image %>);">
    <%= image_tag item.image,class:"item-box-img" %>
    </div>
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">出品者</th>
          <td class="detail-value"><%= item.user.nickname %></td>
        </tr>
        <tr>
          <th class="detail-item">商品名</th>
          <td class="detail-value"><%= item.name %></td>
        </tr>
         <tr>
          <th class="detail-item">商品の説明</th>
          <td class="detail-value"><%= item.description %></td>
        </tr>
        <tr>
          <th class="detail-item">カテゴリー</th>
          <td class="detail-value"><%= item.category.name %></td>
        </tr>
        <tr>
          <th class="detail-item">商品の状態</th>
          <td class="detail-value"><%= item.product_status.name %></td>
        </tr>
        <tr>
          <th class="detail-item">配送料の負担</th>
          <td class="detail-value"><%= item.delivery_charge.name %></td>
        </tr>
        <tr>
          <th class="detail-item">発送元の地域</th>
          <td class="detail-value"><%= item.area.name %></td>
        </tr>
        <tr>
          <th class="detail-item">発送日の目安</th>
          <td class="detail-value"><%= item.shopping_day.name %></td>
        </tr>
        <tr>
          <th class="detail-item">出品価格</th>
          <td class="detail-value"><%= item.price %>円</td>
        </tr>
      </tbody>
    </table>
    </div>
  <% end %>
</div>